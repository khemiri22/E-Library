<div class="container">
    <form action="/books/updateBook/<%= book.id %> " method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <input type="text" class="form-control"  name="title" placeholder="Title" value="<%= book.title %> ">
          </div>

          <div class="mb-3">
            <input type="text" class="form-control"  name="author" placeholder="Author Name" value="<%= book.author %>">
          </div>

          <div class="mb-3">
            <textarea class="form-control" placeholder="Book description" name="description" id="floatingTextarea2" style="height: 100px"><%= book.description %></textarea>
          </div>

          <div class="mb-3">
            <input type="number" class="form-control" value="<%= book.price %>"  name="price" placeholder="Price">
          </div>
          <input type="hidden" name="image" value="<%= book.image %>">
          <div class="mb-3">
            <link><img src="/uploads/<%= book.image %>" width="300px" height="200px" alt="image"/>
              <input type="file" name="image" accept=".png,.jpg,.JPEG" class="form-control">
          </link>
            
          </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
</div>


